# ===========================================
# üöÄ REQUIRED
# ===========================================

# 1Ô∏è‚É£ Telegram Bot Token
BOT_TOKEN=your_bot_token_here

# 2Ô∏è‚É£ Google Sheets API Service Account Key
# Path to your downloaded credentials JSON file (Google Sheets integration)
GOOGLE_APPLICATION_CREDENTIALS=service_account.json

# 3Ô∏è‚É£ Google Sheet Name (the sheet where orders are logged)
SHEET_NAME=Acai Orders
SHEET_ID=your_sheet_id_here

# 4Ô∏è‚É£ Admin Telegram ID (so only you can manage deliveries)
ADMIN_ID=your_admin_id_here

USE_GOOGLE_SHEETS=false


# ===========================================
# üìÅ GOOGLE DRIVE SETTINGS (Optional)
# ===========================================

# Enable/disable Google Drive storage for payment screenshots
# Set to 'true' to use Google Drive, 'false' to use local storage
USE_GOOGLE_DRIVE=false

# Google Drive Folder ID (where payment screenshots will be uploaded)
# To get this ID:
# 1. Create a folder in Google Drive (e.g., "Acai Payment Receipts")
# 2. Share the folder with your service account email (from service_account.json)
# 3. Copy the folder ID from the URL: https://drive.google.com/drive/folders/YOUR_FOLDER_ID_HERE
# Leave empty to upload to root Drive folder (not recommended)
DRIVE_FOLDER_ID=your_drive_folder_id_here

SUPABASE_URL=your_supabase_url_here
SUPABASE_KEY=your_supabase_key_here
SUPABASE_BUCKET=payment-receipts
